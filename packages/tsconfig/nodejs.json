{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node.js",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "es2020",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules"]
}

{
  "name": "learn-tdd-with-katas",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "generate": "turbo generate",
    "rome": "rome",
    "rome:check": "rome check --apply-unsafe {apps,packages}/**/*.{ts,tsx,md}",
    "rome:format": "rome format --write --skip-errors {apps,packages}/**/*.{ts,tsx,md}",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@total-typescript/shoehorn": "0.1.1",
    "@turbo/gen": "1.10.9",
    "eslint": "8.45.0",
    "pythagora": "0.0.78",
    "rome": "12.1.3",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.9",
  "engines": {
    "node": ">=16.20.0"
  }
}

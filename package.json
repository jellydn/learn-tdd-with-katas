{
  "name": "tdd-demo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "rome": "rome",
    "rome:check": "rome check --apply-suggested {apps,packages}/**/*.{ts,tsx,md}",
    "rome:format": "rome format --write --skip-errors {apps,packages}/**/*.{ts,tsx,md}",
    "test": "turbo run test"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "rome": "^11.0.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.27.1",
  "engines": {
    "node": ">=14.0.0"
  }
}

{
  "name": "api",
  "version": "0.2.0",
  "description": "My Moleculer-based microservices project",
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsc --watch --incremental",
    "ci": "vitest --watch",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "dc:down": "docker-compose down",
    "dc:logs": "docker-compose logs -f",
    "dc:up": "docker-compose up --build -d",
    "dev": "tsup --watch --onSuccess 'node_modules/.bin/moleculer-runner --env --config dist/moleculer.config.js'",
    "generate:service": "hygen service new --name",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "common": "workspace:*",
    "db": "workspace:*",
    "dotenv": "16.6.1",
    "helmet": "8.1.0",
    "moleculer": "0.14.35",
    "moleculer-web": "0.10.8",
    "nats": "2.29.3",
    "pino": "9.7.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.15.34",
    "@vitest/ui": "3.2.4",
    "c8": "10.1.3",
    "hygen": "6.2.11",
    "moleculer-repl": "0.7.4",
    "tsconfig": "workspace:*",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">= 14.x.x"
  },
  "tsup": {
    "entry": [
      "moleculer.config.ts",
      "logger.ts",
      "services/**/*.ts",
      "examples/**/*.ts",
      "addons/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
